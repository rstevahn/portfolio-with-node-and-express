extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 My JavaScript Portfolio

      p.lead.text-light
        | This is a portfolio of the JavaScript projects I've completed
        | as part of the #[a(href="https://teamtreehouse.com") Treehouse] Full Stack JavaScript Techdegree program.
        | The page you're looking at now is the sixth project, and is the first server-side project, 
        | utilizing Node.js, Express and Pug.
  article.grid-container.portfolio-index    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each project in projects
        .cell
          a(href=`projects/${project.id}`)
            img.thumbnail(src=`${project.image_urls[0]}`)
            h5= project.project_name
      
